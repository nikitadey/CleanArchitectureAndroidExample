<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorAccentLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bgColor</item>
        <item name="android:popupBackground">@color/bgDialog</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:windowDisablePreview">true</item>
    </style>



    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="progressBarAccent" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">@color/labelColor</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/transparent</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="android:colorControlNormal">@color/transparent</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:drawablePadding">@dimen/padding_drawable</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
<!--        <item name="android:background">@drawable/border_bottom</item>-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>

    </style>

    <style name="EditTextStyle.Register">
        <!--        <item name="android:paddingBottom">6dp</item>-->
        <item name="android:background">@color/transparent</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="EditTextStyle.AlignEnd">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:maxLines">1</item>


    </style>

    <style name="SpinnerStyle">
        <item name="colorControlActivated">@color/transparent</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:popupBackground">@color/bgDialog</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowBackground">@color/bgDialog</item>
        <item name="android:popupBackground">@color/bgDialog</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="backgroundTint">@color/activeColorDark</item>
<!--        <item name="android:background">@drawable/selector_btn_primary</item>-->
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:radius">6dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">2</item>

    </style>

    <style name="ButtonStyle.Grey" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/demo_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/selector_btn_primary</item>
        <item name="android:textColor">@color/greyColor1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:radius">6dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CheckboxStyle">
        <item name="android:layout_marginTop">@dimen/margin_btn_vertical_fields</item>
        <item name="android:buttonTint">@color/activeColor</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="DivStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/inActiveColor</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ToggleBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:background">@drawable/selector_toggle_btn</item>-->
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/toggle_btn_icon_padding</item>
        <item name="iconSize">@dimen/toggle_btn_icon_size</item>
        <item name="iconTint">@null</item>
        <item name="minHeight">@dimen/min_btn_height_small</item>
        <item name="autoSizeMaxTextSize">@dimen/text_normal</item>
        <item name="autoSizeStepGranularity">0.5sp</item>
        <item name="autoSizeMinTextSize">@dimen/text_small</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">@dimen/min_btn_height_small</item>
    </style>

    <style name="ToggleBtnStyle.IconWhite">
        <item name="iconTint">@color/whiteColor</item>
    </style>
    <!--    <style name="ToggleBtnStyle.InActive">-->
    <!--        <item name="backgroundTint">@null</item>-->
    <!--        <item name="android:background">@drawable/toggle_btn_transparent</item>-->
    <!--        <item name="strokeWidth">0dp</item>-->
    <!--    </style>-->

    <style name="HintTextAppearance">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAlignment">viewStart</item>

    </style>

    <style name="PlaceHolderTextAppearance">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAlignment">viewEnd</item>

    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="boxStrokeErrorColor">@color/transparent</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="TextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextColor">@color/editTextHintColor</item>
        <item name="placeholder_emptyVisibility">visible</item>
        <item name="android:layout_marginTop">6dp</item>
<!--        <item name="android:background">@drawable/border_bottom</item>-->
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
    </style>


    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- colorAccent is used as the default value for colorControlActivated,
      which is used to tint widgets -->
        <item name="colorAccent">@color/activeColor</item>
        <item name="colorSwitchThumbNormal">@color/inActiveColor</item>
        <item name="colorControlNormal">@color/inActiveColor</item>


    </style>

    <style name="SocialButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="autoSizeMaxTextSize">@dimen/text_normal</item>
        <item name="autoSizeMinTextSize">@dimen/text_smallest</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="backgroundTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="SearchViewStyle">
        <item name="editTextColor">@color/blackColor</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textColorPrimary">@color/blackColor</item>
        <item name="hintTextColor">@color/labelColor</item>
        <item name="android:textColorHint">@color/labelColor</item>
    </style>


    <style name="ButtonTextStyle">

            <item name="android:textColor">@color/whiteColor</item>
            <item name="android:textSize">@dimen/text_normal</item>

    </style>

    <style name="CustomButtonStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccentLight</item>
    </style>
</resources>
